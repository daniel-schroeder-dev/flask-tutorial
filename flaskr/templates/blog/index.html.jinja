{% extends "base.html.jinja" %}

{% block header %}
    <h1>{% block title %}Posts{% endblock %}</h1>
    {% if g.user %}
        <a href="{{ url_for('blog.create') }}">New</a>
    {% endif %}
{% endblock %}

{% block content %}
    {% for post in posts %}
        
        <article>
            <header>
                <h2>{{ post["title"] }}</h2>
                <p>by {{ post["username"] }} created at {{ post["created"] }} </p>
            </header>
            <p> {{ post["body"] }} </p>
            {% if g.user["user_id"] == post["author_id"] %}
                <a href="{{ url_for('blog.update', id=post['post_id']) }}">Edit</a>
            {% endif %}
        </article>

        {% if not loop.last %}
            <hr>
        {% endif %}

    {% endfor %}
{% endblock %}